<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/creamdark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SignUpActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_background" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="MissingClass">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Create Your Visionary \nAccount"
                android:textColor="@color/white"
                android:textSize="@dimen/_25sdp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_80sdp"
                android:layout_marginStart="@dimen/_20sdp"/>

            <EditText
                android:id="@+id/name"
                android:layout_marginTop="@dimen/_90sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:hint="Name"
                android:textColor="#E1A500"
                android:textColorHint="#E1A500"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:drawableStart="@drawable/name"
                android:drawablePadding="@dimen/_16sdp"
                android:ems="10"
                android:paddingStart="@dimen/_10sdp"
                android:inputType="textPersonName"
                android:background="@drawable/edittext_background"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:textColor="#E1A500"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_height="@dimen/_50sdp"
                android:hint="Email"
                android:textColorHint="#E1A500"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:drawableStart="@drawable/email"
                android:drawablePadding="@dimen/_16sdp"
                android:ems="10"
                android:paddingStart="@dimen/_10sdp"
                android:inputType="textEmailAddress"
                android:background="@drawable/edittext_background"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_height="@dimen/_50sdp"
                android:hint="Password"
                android:textColorHint="#E1A500"
                android:textColor="#E1A500"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:drawableStart="@drawable/password"
                android:drawablePadding="@dimen/_16sdp"
                android:ems="10"
                android:paddingStart="@dimen/_10sdp"
                android:inputType="textEmailAddress"
                android:background="@drawable/edittext_background"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/progressbar"
                    android:visibility="gone"
                    android:indeterminateTint="#E4AD08"
                    android:outlineAmbientShadowColor="@color/white"
                    android:outlineSpotShadowColor="#E4AD08"/>
                <ImageView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_height="@dimen/_70sdp"
                    android:src="@drawable/btn_login"
                    android:layout_gravity="end"
                    android:id="@+id/enter"
                    android:layout_marginTop="@dimen/_10sdp"
                    />

            </RelativeLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:textAlignment="center"
                android:textColor="#E4AD08"
                android:text="Already have an account? Signin"/>



        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>